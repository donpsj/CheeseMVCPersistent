@using CheeseMVC.ViewModels;
@model EditCheeseViewModel

<h1>Edit Cheese @Model.Name (id=@Model.CheeseId)</h1>

<form asp-controller="Cheese" asp-action="Edit" method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="Model.Categories"></select>
        <span asp-validation-for="CategoryID"></span>
    </div>
    <input type="hidden" asp-for="CheeseId" />
    <input type="submit" value="Save Cheese" />
</form>
